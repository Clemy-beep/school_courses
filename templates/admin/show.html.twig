{% extends 'base.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block body %}
	<div id="user-basics">
		{% if admin.avatar %}
			<img id="avatar" src="{{asset('uploads/avatars/'~admin.avatar)}}" alt="avatar"/>
		{% else %}
			<img id="avatar" src="{{asset('uploads/avatars/tiny-alien-asset.jpg')}}" alt="avatar"/>
		{% endif %}
		<h1>
			{{admin.firstname}}
			{{admin.lastname}}
		</h1>
	</div>
	<span class="roles">{{ admin.roles ? "Admin" : ''}}</span>
	<h2>Email</h2>
	<p>
		{{admin.email}}
	</p>

	<a href="{{ path('app_user_index') }}">back to list</a>

	<a href="{{ path('app_admin_edit', {'id': admin.id}) }}">edit</a>

	{{ include('admin/_delete_form.html.twig') }}
{% endblock %}
