{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div id="user-basics">
		{% if user.avatar %}
			<img id="avatar" src="{{asset('uploads/avatars/'~user.avatar)}}" alt="avatar"/>
		{% else %}
			<img id="avatar" src="{{asset('uploads/avatars/tiny-alien-asset.jpg')}}" alt="avatar"/>
		{% endif %}
		<h1>
			{{user.firstname}}
			{{user.lastname}}
		</h1>
	</div>
	<span class="roles">{{ user.roles ? "ROLE_MENTOR" in user.roles ? "Mentor" : "Student" }}</span>
	<h2>Email</h2>
	<p>
		{{user.email}}
	</p>

	<a href="{{ path('app_user_index') }}">back to list</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
